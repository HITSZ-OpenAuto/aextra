---
import { theme } from "@/config";

const { siteName, description, author } = theme;
// If the `site` property is not configured, Astro.site will be undefined. This fallback prevents errors.
const canonicalURL = new URL(Astro.url.pathname, Astro.site || "http://localhost:4321");

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<meta charset="utf-8" />
<meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
<meta content="IE=edge" http-equiv="X-UA-Compatible" />
<meta name="robots" content="index, follow" />

<title>{title ? `${title} | ${siteName}` : siteName}</title>
<meta name="description" content={description} />
<meta content={author} name="author" />

{/* Canonical URL */}
<link rel="canonical" href={canonicalURL} itemprop="url" />

{/* Icons / Favicon */}
<link rel="icon shortcut" href="/favicon/favicon.ico" sizes="32x32" />
<link rel="icon" href="/favicon/favicon-16x16.png" type="image/png" sizes="16x16" />
<link rel="icon" href="/favicon/favicon-32x32.png" type="image/png" sizes="32x32" />
<link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png" sizes="180x180" />
<link fetchpriority="low" href="/favicon/site.webmanifest" rel="manifest" />

{/* Open Graph / Facebook */}
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />

{/* Twitter */}
<meta name="twitter:card" content="summary" />
<meta content={canonicalURL} property="twitter:url" />
<meta content={title} property="twitter:title" />
<meta content={description} property="twitter:description" />

<meta content={Astro.generator} name="generator" />


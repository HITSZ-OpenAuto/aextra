---
interface Props {
    icon: string;
    title: string;
    description: string;
    link: string;
}

const { icon, title, description, link } = Astro.props;
---

<a href={link} class="bg-gray-30 flex w-full h-18 my-2 border-2 border-gray-200 justify-evenly items-center rounded-4xl cursor-pointer transition-transform duration-200 ease-out hover:scale-[1.04] hover:translate-y-[4%] transform-gpu hover:shadow-[0px_4px_20px_rgba(0,0,0,0.1)] p-2">
    <span class="flex m-2">
        <img src={icon} class="w-12 h-12">
    </span>
    <span class="w-[45%]">
        <div class="w-full h-8 text-size-5 font-bold" style="color: rgb(48, 48, 48);">
            {title}
        </div>
        <div class="flex justify-start items-center w-full h-6 text-size-4 font-light" style="color: rgb(83, 83, 83);">
            {description}
        </div>
        <script is:inline>
            (function () {
                const curScript = document.currentScript;
                if (!curScript) return;
                const description = curScript.previousElementSibling;
                if (!description) return;
                const title = description.previousElementSibling;
                if (!title) return;
                const listItem = curScript?.parentElement?.parentElement;
                if (!listItem) return;

                listItem.addEventListener("mouseover", () => {
                    title.style.setProperty("color", "rgb(80, 80, 80)");
                    description.style.setProperty("color", "rgb(150, 150, 150)");
                });
                listItem.addEventListener("mouseleave", () => {
                    title.style.setProperty("color", "rgb(48, 48, 48)");
                    description.style.setProperty("color", "rgb(83, 83, 83)");
                });
            })();
        </script>
    </span>
    <span class="flex">
        <span class="w-3 h-3 rounded-full bg-green-400"></span>
    </span>
</a>
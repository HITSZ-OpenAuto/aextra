---
import { theme } from "@/config";

import BaseHead from "../components/BaseHead.astro";
import NavBar from "../components/NavBar.astro";
import { cn } from "../utils";

const { navbar } = theme;

interface Props {
  title?: string;
  article?: boolean;
}

const { title, article } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={title} />
    <script is:inline>
      (function () {
        try {
          const stored = localStorage.getItem("page-width");
          const width = stored ? stored : "1280px";
          document.documentElement.style.setProperty("--page-width", width);
        } catch (e) {
          document.documentElement.style.setProperty("--page-width", "1280px");
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <NavBar items={navbar.items} article={article} />
    <div class="w-full flex-1">
      <div
        class={cn(
          "mx-auto flex justify-center items-center duration-500",
          article ? "max-w-[var(--page-width,1280px)]" : "max-w-1280px",
        )}
      >
        <main class=`max-w-6xl w-full break-words flex min-w-0 justify-center pb-8`>
          {
            article ? (
              <article class="prose w-full min-w-0 max-w-6xl px-6 pt-4 md:px-12">
                <slot />
              </article>
            ) : (
              <div class="w-full min-w-0 max-w-6xl px-6 pt-4 md:px-12">
                <slot />
              </div>
            )
          }
        </main>
      </div>
      <footer>
        <!-- TODO: add footer -->
      </footer>
    </div>
    <footer class="w-full bg-gray-100">
      <div class="h-12 mx-6 flex items-center justify-start text-size-3 text-gray-700 hover:text-dark-900 cursor-pointer">
        <svg height="12" class="group-data-[theme=dark]:hx-hidden" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentcolor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003.0 0012 21a9.003 9.003.0 008.354-5.646z"></path></svg>
        <p class="mx-1">深色</p>
        <script is:inline>
          (function () {
            const script = document.currentScript;
            const p = script.previousElementSibling;

            p.addEventListener("click", () => {
              // TODO: toggle theme
            });
          })();
        </script>
      </div>
      <hr class="border-gray-200"/>
      <div class="flex flex-col justify-start items-around mx-6 my-9 text-4xl text-size-3" style="color: rgb(80, 80, 80)">
        <div class="font-bold text-size-4">由 Astro 驱动</div>
        <div class="w-full h-20 flex flex-col justify-start items-around">
          <div>© 2025 HITSZ OpenAuto</div>
          <div><span class="font-bold" style="color: rgb(80, 80, 80)">版权声明：</span>本站采用 知识共享署名-非商业性使用-相同方式共享 4.0 国际许可协议 (CC BY-NC-SA 4.0) 进行许可。</div>
        </div>
      </div>
    </footer>
  </body>
</html>
